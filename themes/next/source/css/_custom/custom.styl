.side-buttons {
    position: fixed;
    width: 30px;
    bottom: 50%;
    right: 0px;
    z-index: 1000;
}

.side-buttons .side-buttons-box {
    box-sizing: border-box;
	position: relative;
    top: 0;
    left: 0;
    width: 100%;
	height: 36px;
    margin-bottom: 1px;	
    background: #ccc;
	font-size: 16px;
    cursor: pointer;
    text-align: center;
